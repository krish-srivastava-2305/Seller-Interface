generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  email    String    @id
  name     String?
  password String
  product  product[]
}

model product {
  id          String  @id
  name        String
  description String?
  user        user    @relation(fields: [email], references: [email])
  email       String
  image       String?
}
